{# templates/auth/register.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4 text-center">Register</h1>
<div class="w-50 m-auto">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label == 'error' ? 'danger' : (label == 'success' ? 'success' : 'info') }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
    <form method="post">
        <div class="mb-3">
            <label for="inputUsername" class="form-label">Username</label>
            <input type="text" name="username" id="inputUsername" class="form-control" required>
        </div>

        <div class="mb-3">
            <label for="inputEmail" class="form-label">Email</label>
            <input type="email" name="email" id="inputEmail" class="form-control" required>
        </div>

        <div class="mb-3">
            <label for="inputPassword" class="form-label">Password</label>
            <input type="password" name="password" id="inputPassword" class="form-control" required>
        </div>

        <div class="mb-3">
            <label for="inputConfirmPassword" class="form-label">Confirm Password</label>
            <input type="password" name="confirm_password" id="inputConfirmPassword" class="form-control" required>
        </div>

        <button type="submit" class="btn btn-primary">Register</button>
    </form>

</div>

</div>

{% endblock %}
