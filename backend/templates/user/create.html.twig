{% extends 'base.html.twig' %}

{% block title %}Create User
{% endblock %}

{% block body %}
	<div class="container my-5">
		{% include 'message.html.twig' with {'flash': app.flashes} %}

		<h1 class="text-center mb-4">Create User</h1>

		{{ form_start(form, {'attr': {'class': 'needs-validation'}, 'novalidate': 'novalidate'}) }}

		<div class="mb-3">
			{{ form_row(form.username) }}
			{{ form_row(form.password) }}
			{{ form_row(form.created_at) }}
			{{ form_row(form.updated_at) }}
			{{ form_row(form.deleted_at) }}
		</div>

		<div class="table-responsive">
			<table class="table table-bordered table-hover align-middle">
				<thead class="table-light"></thead>
				<tbody></tbody>
			</table>
		</div>

		<div class="d-flex justify-content-between align-items-center mt-4">
			<a href="{{ path('users') }}" class="btn btn-secondary">Back to list</a>
			<button type="submit" class="btn btn-primary">Save User</button>
		</div>

		{{ form_end(form) }}
	</div>
{% endblock %}
